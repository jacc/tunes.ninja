datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Guild {
    id                String      @id
    enabled           Boolean     @default(true)
    replyStyle        REPLY_STYLE @default(EMBED)
    replyToSpotify    Boolean     @default(true)
    replyToAppleMusic Boolean     @default(true)
    replyToSoundcloud Boolean     @default(false)
}

enum REPLY_STYLE {
    EMBED
    MINIMAL
}

model Stats {
    searches Int @id
}

model User {
    id          String @id
    lastfm      String @default("")
    searches    Int    @default(0)
    description String @default("A mysterious user.")
}

model LinkedChannel {
    id         String
    platform   String
    playlistID String @id
}
