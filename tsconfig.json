{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": false
  },
  "exclude": ["node_modules", "dist"],
  "paths": { "@services/*": ["./services/*"] }
}
